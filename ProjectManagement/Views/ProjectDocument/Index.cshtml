@model IEnumerable<ProjectManagement.Entites.ProjectDocument>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#inputEditProjectDocumentModal">
    Add
</button>   

<!-- Modal -->
<div class="modal fade" id="inputEditProjectDocumentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Input/Edit Project Document</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateEdit", "ProjectDocument", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <table class="table">
                            <tr>
                                <td>Document Type</td>    
                                <td>:</td>
                                <td>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.DropDownList("DocumentTypeId", null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>Document Name</td>
                                <td>:</td>
                                <td>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.Editor("DocumentName", new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>File</td>
                                <td>:</td>
                                <td>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.Editor("FilePath", new { htmlAttributes = new { @type = "file" } })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>Version</td>
                                <td>:</td>
                                <td>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.Editor("Version", new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" align="right">
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn btn-default" />
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DocumentType.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Project.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Version)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentType.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FilePath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Version)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DocumentId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DocumentId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DocumentId })
        </td>
    </tr>
}

</table>
